{
  "type": "AdaptiveCard",
  "version": "1.6",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "body": [
    {
      "type": "TextBlock",
      "text": "Product Reviews",
      "size": "Large",
      "weight": "Bolder"
    },
    {
      "type": "TextBlock",
      "text": "Adaptive Cards Mobile SDK",
      "weight": "Bolder",
      "size": "Medium"
    },
    {
      "type": "Rating",
      "id": "productRating",
      "value": 4.5,
      "count": 128,
      "max": 5,
      "size": "Medium"
    },
    {
      "type": "TextBlock",
      "text": "A fantastic SDK for building mobile experiences!",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Rate Your Experience",
      "weight": "Bolder",
      "size": "Medium"
    },
    {
      "type": "Input.Rating",
      "id": "userRating",
      "label": "How would you rate this product?",
      "max": 5,
      "value": 0,
      "isRequired": true,
      "errorMessage": "Please provide a rating"
    },
    {
      "type": "Input.Text",
      "id": "feedback",
      "label": "Additional feedback (optional)",
      "isMultiline": true,
      "placeholder": "Tell us more about your experience..."
    },
    {
      "type": "TextBlock",
      "text": "Different Rating Sizes",
      "weight": "Bolder",
      "size": "Medium"
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Small:",
          "size": "Small"
        },
        {
          "type": "Rating",
          "value": 3.5,
          "max": 5,
          "size": "Small"
        },
        {
          "type": "TextBlock",
          "text": "Medium (default):",
          "size": "Small"
        },
        {
          "type": "Rating",
          "value": 4.0,
          "max": 5,
          "size": "Medium"
        },
        {
          "type": "TextBlock",
          "text": "Large:",
          "size": "Small"
        },
        {
          "type": "Rating",
          "value": 5.0,
          "max": 5,
          "size": "Large"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit Rating"
    }
  ]
}
