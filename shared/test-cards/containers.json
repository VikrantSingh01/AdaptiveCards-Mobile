{
  "type": "AdaptiveCard",
  "version": "1.6",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "body": [
    {
      "type": "Container",
      "style": "Emphasis",
      "items": [
        {
          "type": "TextBlock",
          "text": "Container Example",
          "size": "Large",
          "weight": "Bolder"
        },
        {
          "type": "TextBlock",
          "text": "This text is inside a container with emphasis style."
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "https://adaptivecards.io/content/cats/1.png",
              "size": "Small",
              "style": "Person"
            }
          ]
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "Column Set",
              "weight": "Bolder"
            },
            {
              "type": "TextBlock",
              "text": "This demonstrates a column layout with an image and text.",
              "wrap": true
            }
          ]
        }
      ]
    }
  ]
}
