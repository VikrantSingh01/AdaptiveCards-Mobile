{
  "type": "AdaptiveCard",
  "version": "1.6",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "body": [
    {
      "type": "TextBlock",
      "text": "Progress Indicators",
      "size": "Large",
      "weight": "Bolder"
    },
    {
      "type": "TextBlock",
      "text": "Task Progress",
      "weight": "Bolder",
      "size": "Medium"
    },
    {
      "type": "ProgressBar",
      "id": "taskProgress",
      "label": "Overall Completion",
      "value": 0.75
    },
    {
      "type": "ProgressBar",
      "id": "uploadProgress",
      "label": "File Upload",
      "value": 0.45,
      "color": "#0078D4"
    },
    {
      "type": "ProgressBar",
      "id": "downloadProgress",
      "label": "Download",
      "value": 0.90,
      "color": "green"
    },
    {
      "type": "TextBlock",
      "text": "Loading States",
      "weight": "Bolder",
      "size": "Medium"
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Small Spinner:",
          "size": "Small"
        },
        {
          "type": "Spinner",
          "id": "smallSpinner",
          "size": "Small",
          "label": "Loading..."
        },
        {
          "type": "TextBlock",
          "text": "Medium Spinner (default):",
          "size": "Small"
        },
        {
          "type": "Spinner",
          "id": "mediumSpinner",
          "size": "Medium",
          "label": "Processing your request..."
        },
        {
          "type": "TextBlock",
          "text": "Large Spinner:",
          "size": "Small"
        },
        {
          "type": "Spinner",
          "id": "largeSpinner",
          "size": "Large",
          "label": "Please wait..."
        }
      ]
    },
    {
      "type": "TextBlock",
      "text": "Step Progress",
      "weight": "Bolder",
      "size": "Medium"
    },
    {
      "type": "ProgressBar",
      "label": "Step 1 of 4: Personal Information",
      "value": 0.25
    },
    {
      "type": "ProgressBar",
      "label": "Step 2 of 4: Address",
      "value": 0.50
    },
    {
      "type": "ProgressBar",
      "label": "Step 3 of 4: Payment",
      "value": 0.75
    },
    {
      "type": "ProgressBar",
      "label": "Step 4 of 4: Review",
      "value": 1.0,
      "color": "#107C10"
    }
  ]
}
